<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoalTracker.Views.Welcome.WelcomePage"
             Title="Willkommen bei GoalTracker">
    <ContentPage.Content>
        <StackLayout Padding="25" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="Icon.png" Style="{StaticResource ListViewItemImage}" Scale="1.5"/>
            <Label Text="Danke das du uns mit deinem Download unterstützt. Wir hoffen GoalTracker kann dir helfen deine Ziele zu erreichen :)"
                   HorizontalTextAlignment="Center"
                   Margin="0, 25, 0, 0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>